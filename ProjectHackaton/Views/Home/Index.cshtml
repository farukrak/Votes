@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<header class="header" style="background-image: url(https://sharespro.ru/upload/iblock/cb6/shutterstock_1533283127.jpg); height: 500px; background-attachment: local; background-size: cover; background-position: center center; background-color: silver; background-blend-mode: multiply; ">
    <div class="container">
        <div class="text-center" style="color: white; margin:auto;">
            <h1 style="padding-top: 180px; margin-top: 0"><strong>Система оценки качества обслуживания</strong></h1>
            <h1>
                <a asp-action="Evaluation"  style="font-size:30px; margin-top: 120px" asp-controller="Score" class="btn btn-outline-primary">Начать</a>
            </h1>
        </div>
    </div>
</header>
<div style="background-color:lightgray; width:100%; height:100%; position:absolute; top:0; left:0; z-index: -1; opacity:0.1"></div>
<div style="margin: 20px 40%; width:400px ">
    <a asp-action="GetScores" asp-controller="Score" class="btn btn-outline-primary" style="text-align:center; ">Посмотреть ваши баллы</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th style="padding:30px">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th style="padding:30px">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding:30px">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td style="padding:30px">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            </tr>
}
    </tbody>
</table>

<div style="justify-content:center; text-align:center; margin-top: 50px;">
    <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-primary">Выйти</a>
</div>

<style>
    th, td {
        margin-right: 15px;
    }
</style>